<div class="card">
  <div id="card_image">
    <%= image_tag(kitchen.photo_url, class: "img-fluid") %>
  </div>
  <div class="card-body pb-0">
    <h5 class="card-text mb-0"><%= kitchen.title %></h5>
    <p class="mb-0"><%= kitchen.city %></p>
  </div>
  <div id="price">
    <p class="mb-0">R$ <%= kitchen.price_per_hour %> per hour</p>
  </div>
</div>
