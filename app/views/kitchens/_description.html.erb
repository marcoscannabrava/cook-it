<div id="show-description">
  <div class="container d-flex">
    <img id="main-photo" src="<%= @kitchen.photo_url %>">
    <div class="description text-center">
        <h3 class="card-text"><%= kitchen.title %></h3>
        <p><%= kitchen.description %></p>
        <div id="price-description">
          <h4>R$ <%= kitchen.price_per_hour %></h4>
          <h5>per hour</h5>
        </div>
    </div>
  </div>
</div>


<div id="show-description2">
