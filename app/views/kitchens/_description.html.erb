    <img id="photo3" src="<%= @kitchen.photo_url %>">
    <img id="photo4" src="<%= @kitchen.photo_url %>">
    <div class="description2 text-center">
      <p id="address"><%= kitchen.address %></p>
      <button type="button" class="btn btn-secondary" data-toggle="modal" data-target="#bookingModal">BOOK IT</button>
    </div>
      <%= render partial: "bookings/modal" %>
  </div>
</div>






